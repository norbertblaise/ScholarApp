<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ProfileSectionTitle" parent="OnboardingTitle">
        <item name="android:textSize">28sp</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="OnboardingTitle" parent="TextAppearance.AppCompat">
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/roboto_light</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingLeft">16dp</item>
    </style>

    <style name="OnboardingDesc" parent="TextAppearance.AppCompat">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingLeft">16dp</item>
    </style>

    <style name="EditStudentProfileInputs" parent="TextAppearance.AppCompat">

        <item name="android:textSize">16sp</item>
        <item name="android:height">53dp</item>
        <item name="android:width">@dimen/EditProfile_width_long</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingStart">15dp</item>
        <item name="android:paddingEnd">15dp</item>

    </style>

    <style name="EditProfileCardView">
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:padding">24dp</item>
        <item name="android:layout_margin">16dp</item>
        <item name="cardElevation">5dp</item>

    </style>

    <style name="EditProfileCardViewConstraintLayout">
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingBottom">30dp</item>
        <item name="android:padding">24dp</item>
        <item name="android:layout_margin">16dp</item>


    </style>

    <style name="EditProfileCardViewElements">
        <item name="android:textSize">16sp</item>
        <item name="android:height">53dp</item>
        <item name="android:width">350dp</item>
    </style>

    <style name="Widget.Theme.ScholarApp.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>
</resources>